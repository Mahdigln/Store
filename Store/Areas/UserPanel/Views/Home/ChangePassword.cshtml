@model Core.DTOs.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

    <div class="col-md-9">
                                <div class="" style="text-align: right;padding: initial;padding-right: 350px;padding-top: 150px; padding-bottom: 100px;position: relative;right: 134px;">
                                    <div class="card-header">تغییر کلمه عبور</div>
                                    <div class="card-body card-block">
                                        <form asp-action="ChangePassword" method="post">
                                            
                                            @if (ViewBag.IsSuccess != null)
                                            {
                                                <div class="alert alert-success">
                                                    کلمه عبور شما با موفقیت ویرایش شد.
                                                </div>
                                            }
                                            
                                            <div class="wrap-input100 validate-input" >
                                                <input asp-for="OldPassword" class="input100" type="password" name="OldPassword" placeholder="کلمه عبور فعلی ">
                                                <span class="focus-input100"></span>
                                                <span class="symbol-input100">
                                                    <i class="fa fa-lock-open" aria-hidden="true"></i>
                                                </span>
                                            </div>

                                            <div class="wrap-input100 validate-input">
                                                <input asp-for="Password" class="input100" type="password" name="Password" placeholder="کلمه عبور جدید">
                                                <span class="focus-input100"></span>
                                                <span class="symbol-input100">
                                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                                </span>
                                            </div>
                                            
                                            <div class="wrap-input100 validate-input">
                                                <input asp-for="RePassword" class="input100" type="password" name="RePassword" placeholder="تکرار کلمه عبور جدید">
                                                <span class="focus-input100"></span>
                                                <span class="symbol-input100">
                                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                                </span>
                                            </div>

                                            
                                            
                                            <div class="text-danger"  asp-validation-summary="All"></div>

                                            <div class="container-login100-form-btn">
                                                <button class="login100-form-btn">
                                                    تغییر کلمه عبور
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

<partial name="_Sidebar"/>

