@page
@using Core.Convertors
@model Store.Pages.Admin.Discount.IndexModel
@{
    ViewData["Title"] = "لیست کد تخفیف ها";
}

<div class="main-content">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header" style="text-align: right"> لیست کد تخفیف ها</div>
            <div class="card-body card-block">

                
                <div class="row col-md-12" dir="rtl">

                    <a asp-page="CreateDiscount" class="btn btn-outline-success">افزودن کد جدید</a>

                </div>
                <br />

                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30" dir="rtl">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                            <tr>
                                <th>کد تخفیف</th>
                                <th>تعداد</th>
                                <th>تاریخ شروع</th>
                                <th>تاریخ پایان</th>
                                <th>دستورات</th>
                            </tr>
                            </thead>
                            <tbody>

                            @foreach (var code in Model.Discounts)
                            {
                                <tr>
                                    <td>@code.DiscountCode</td>
                                    <td>@code.UsableCount</td>
                                    <td>@((code.StartDate!=null)?code.StartDate.Value.ToShamsi():"")</td>
                                    <td>@((code.EndDate!=null)?code.EndDate.Value.ToShamsi():"")</td>
                                    <td>
                                        <a href="/Admin/Discount/EditDiscount/@code.DiscountId" class="btn btn-warning btn-sm">
                                            ویرایش
                                        </a>
                                        @*<a href="/Admin/Roles/DeleteRole/@code.RoleId" class="btn btn-danger btn-sm">
                                            حذف
                                        </a>*@
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
