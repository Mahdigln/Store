@page "{id}"
@using Core.Convertors
@model Store.Pages.Admin.Users.DeleteUserModel
@{
    ViewData["Title"] = "حذف کاربر";
}



<div class="main-content">
    <div class="col-lg-12">
        <div class="card" style="text-align: right" dir="rtl">
            <div class="card-header" >حذف کاربر</div>
            <div class="card-body card-block">

                <form method="post">
                    <div class="row">
                        <input type="hidden" name="UserId" value="@ViewData["UserId"].ToString()"/>
                        
                        <dl>
                            <dt>نام کاربری:</dt>
                            <dd>@Model.InformationUserViewModel.UserName</dd>
                            <dt>ایمیل:</dt>
                            <dd>@Model.InformationUserViewModel.Email</dd>
                            <dt> موجودی کیف پول:</dt>
                            <dd>@Model.InformationUserViewModel.Wallet</dd>
                            <dt>تاریخ عضویت:</dt>
                            <dd>@Model.InformationUserViewModel.RegisterDate.ToShamsi()</dd>
                            <dt>
                            </dt>
                            <dd>
                                <input type="submit" value="حذف" class="btn btn-outline-danger btn-lg btn-block"/>
                            </dd>

                        </dl>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

