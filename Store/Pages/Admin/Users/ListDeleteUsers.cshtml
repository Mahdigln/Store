@page
@using Core.Convertors
@model Store.Pages.Admin.Users.ListDeleteUsersModel
@{
    ViewData["Title"] = "لیست کاربران حذف شده";
}

<div class="main-content">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header" style="text-align: right">لیست کاربران  حذف شده سایت</div>
            <div class="card-body card-block">

                <form>
                    <div class="row">

                        <div class="form-group col-sm-6 col-md-6">
                            <div class="input-group">
                                <input type="email" name="filterEmail" placeholder="ایمیل" class="form-control" dir="rtl">
                                <div class="input-group-addon">
                                    <i class="fa fa-envelope"></i>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group col-sm-6 col-md-6">
                            <div class="input-group">
                                <input type="text" name="filterUserName" placeholder="نام کاربری" class="form-control" dir="rtl">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-actions form-group col-sm-2 col-md-2 col-xl-2">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">بگرد</button>
                        </div>
                        <div class="col-sm-2 col-md-2 col-xl-2">
                            <a class="btn btn-warning btn-lg btn-block" href="/Admin/Users">خالی</a>
                        </div>
                    </div>

                     <br/>
                </form>
                <div class="row col-md-12" dir="rtl">
                        
                    <a asp-page="CreateUser" class="btn btn-outline-success">افزودن کاربر جدید</a>
                        
                </div>
                <br/>

                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    @*<th>دستورات</th>*@
                                    <th>تاریخ ثبت نام</th>
                                    <th>وضعیت</th>
                                    <th> ایمیل</th>
                                    <th>نام کاربری</th>
                                </tr>
                            </thead>
                            <tbody>
                            
                           @foreach (var user in Model.UsersForAdminViewModel.Users)
                            {
                                <tr>
                                   @* <td>
                                        <a href="/Admin/Users/EditUser/@user.UserId" class="btn btn-warning btn-sm">
                                            ویرایش
                                        </a>
                                        <a href="/Admin/Users/DeleteUser/@user.UserId" class="btn btn-danger btn-sm">
                                            حذف
                                        </a>
                                    </td>*@
                                    <td>@user.RegisterDate.ToShamsi()</td>
                                    <td>
                                            @if (user.IsActive)
                                            {
                                                <p class="text-success">فعال</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">غیر فعال</p>
                                            }
                                        </td>
                                    
                                    <td>@user.Email</td>
                                    <td>@user.UserName</td>
                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

