@model Core.DTOs.ForgotPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}

<main >
   
    <div class="container col-md-9">

        <div class="wrap-login100">
            <div dir="ltr" class="login100-pic js-tilt" data-tilt="" style="will-change: transform; transform: perspective(300px) rotateX(0deg) rotateY(0deg);">
                <img src="/images/img-01.png" alt="IMG">
            </div>

            <form asp-action="ForgotPassword" method="post" class="login100-form validate-form">
                <span class="login100-form-title">
                    بازیابی کلمه عبور
                </span>

                <div class="wrap-input100 validate-input" @*data-validate="Valid email is required: ex@abc.xyz"*@>
                    <input asp-for="Email" class="input100" type="text" name="Email" placeholder="ایمیل">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="Email"></span>


                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        تایید و ارسال
                    </button>
                </div>

            </form>
        </div>
    </div>
    
    <div style="text-align: center"> 
        @if (ViewBag.IsSuccess != null) @* !=null == true*@
        {
            <div class="alert alert-success">
                <p class="help-block">ایمیل بازیابی کلمه عبور برای شما ارسال شد</p>
            </div>

        }
    </div>



</main>


<script>
    $('.js-tilt').tilt({
        scale: 1.1
    })
</script>



