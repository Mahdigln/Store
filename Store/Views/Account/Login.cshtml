@model Core.DTOs.LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
}
@*
    <div class="container-login100">*@
<main >
    @if (ViewBag.EditProfile==true)
    {
        <div class="alert alert-warning" style="margin-top: 130px;text-align: right">
            به دلیل ویرایش پروفایل و بارگذاری مجدد اطلاعات لطفا مجدد لاگین کنید
        </div>
    }
    <div class="container col-md-9">

        <div class="wrap-login100">
            <div dir="ltr" class="login100-pic js-tilt" data-tilt="" style="will-change: transform; transform: perspective(300px) rotateX(0deg) rotateY(0deg);">
                <img src="/images/img-01.png" alt="IMG">
            </div>

            <form asp-action="Login" method="post" class="login100-form validate-form">
                <span class="login100-form-title">
                    ورود کاربر
                </span>

                <div class="wrap-input100 validate-input" @*data-validate="Valid email is required: ex@abc.xyz"*@>
                    <input asp-for="Email" class="input100" type="email" name="Email" placeholder="ایمیل">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="Email"></span>

                <div class="wrap-input100 validate-input" @*data-validate="Password is required"*@>
                    <input asp-for="Password" class="input100" type="password" name="Password" placeholder="رمز عبور">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="Password"></span>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        ورود
                    </button>
                </div>
                <div class="txt2" style="text-align: right; margin-top: 2px;">
                    <label><input asp-for="RememberMe" type="checkbox" name=""> مرا بخاطر بسپار </label>
                </div>

                <div class="text-center p-t-12">
                    <span class="txt1">
                        فراموش کردن
                    </span>
                    <a class="txt2" href="/ForgotPassword">
                        ایمیل / رمز عبور؟
                    </a>
                </div>

                <div class="text-center p-t-12">
                    <a class="txt2" href="/Register">
                        حساب خود را بسازید
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div style="text-align: center">
        @if (ViewBag.IsSuccess != null) @* !=null == true*@
        {
            <div class="alert alert-success">
                <p class="help-block">ورود با موفقیت انجام شد</p>
            </div>

            <script>
                //Your delay in milliseconds
                var delay = 6000;
                setTimeout(function() { window.location = "https://localhost:44341/UserPanel"; }, delay);
            </script>
        }
    </div>

</main>


<script>
    $('.js-tilt').tilt({
        scale: 1.1
    })
</script>
