@model Core.DTOs.RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
}

<main>
    <div class="container  col-md-9">
        <div class="wrap-login100 ">
            <div dir="ltr" class="login100-pic js-tilt" data-tilt="" style="will-change: transform; transform: perspective(300px) rotateX(0deg) rotateY(0deg);">
                <img src="/images/img-01.png" alt="IMG">
            </div>

            <form asp-action="Register" method="post" class="login100-form validate-form">
                <span class="login100-form-title">
                    ثبت نام کاربر
                </span>
                <div class="wrap-input100 validate-input" @*data-validate="Valid email is required: ex@abc.xyz"*@>
                    <input asp-for="UserName" class="input100" type="text" name="UserName" placeholder="نام کاربری">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="UserName"></span>

                <div class="wrap-input100 validate-input" @*data-validate="Valid email is required: ex@abc.xyz"*@>
                    <input asp-for="Email" class="input100" type="email" name="Email" placeholder="ایمیل">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="Email"></span>

                <div class="wrap-input100 validate-input" @*data-validate="Valid email is required: ex@abc.xyz"*@>
                    <input asp-for="Password" class="input100" type="password" name="Password" placeholder="رمز عبور">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="Password"></span>

                <div class="wrap-input100 validate-input" @*data-validate="Valid email is required: ex@abc.xyz"*@>
                    <input asp-for="RePassword" class="input100" type="password" name="RePassword" placeholder="تکرار رمز عبور">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="RePassword"></span>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        ثبت نام
                    </button>
                </div>

                <div class="text-center p-t-12">
                    <a class="txt2" href="/Login">
                        ورود به سایت
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>

                

            </form>
        </div>
    </div>
</main>
    
























    

