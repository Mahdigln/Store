@model Core.DTOs.ResetPasswordViewModel
@{
    ViewData["Title"] = "بازیابی رمز عبور";
}

<main>
    <div class="container col-md-9">

        <div class="wrap-login100">
            <div dir="ltr" class="login100-pic js-tilt" data-tilt="" style="will-change: transform; transform: perspective(300px) rotateX(0deg) rotateY(0deg);">
                <img src="/images/img-01.png" alt="IMG">
            </div>
            

            <form asp-action="ResetPassword" method="post" class="login100-form validate-form">
                <span class="login100-form-title">
                    بازیابی کلمه عبور
                </span>
                
                
                <input type="hidden" asp-for="ActiveCode"/>

                <div class="wrap-input100 validate-input">
                    <input asp-for="Password" class="input100" type="password" name="Password" placeholder="رمز عبور">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="Password"></span>

                <div class="wrap-input100 validate-input" >
                    <input asp-for="RePassword" class="input100" type="password" name="RePassword" placeholder="تکرار رمز عبور">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="RePassword"></span>


                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        ثبت تغییرات
                    </button>
                </div>

            </form>
        </div>
    </div>

</main>


<script>
    $('.js-tilt').tilt({
        scale: 1.1
    })
</script>
